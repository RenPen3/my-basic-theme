  </div>
</header>

{% schema  %} 
{
  "name": "Header",
  "settings": [
    {
      "type": "color",
      "id": "header_bg_color",
      "label": "Background Color",
      "default": "#000000"
    },
    {
      "type": "link_list",
      "id": "link_list",
      "label": "Navigation Menu"
    }

  ]
}

{% endschema %}


