<header class="nav" style="background-color: {{ section.settings.header_bg_color }};">
  <div class="nav-content">
    <a class="nav-logo" href="#">
      <img src="{{ section.settings.header_image | img_url: 'master' }}" alt="Header image">

      {% comment %} <img id="nav-logo-image"
        src="https://www.fender.com/cdn/shop/files/fender_logo.svg?v=1741186043&width=290"
        width="290px"
        height="auto"
        alt="Red Fender Logo"
      > {% endcomment %}
    </a>
    <form class="nav-content__form" action="/search">
      <button class="nav-content__button">
        <a href="#">
          <i class="fa-solid fa-magnifying-glass"></i>
        </a>
      </button>
      <input
        class="nav-content__input"
        type="text"
        placeholder="What can we help you find?"
      >
    </form>
    <div class="nav-content__icons">
      <a href="#">
        <i class="fa-solid fa-location-dot"></i>
      </a>
      <a href="#">
        <i class="fa-solid fa-user"></i>
      </a>
      <a href="#">
        <i class="fa-solid fa-cart-shopping"></i>
      </a>
    </div>
