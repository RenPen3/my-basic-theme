    <img
      src="https://images.ctfassets.net/mdpgzc1lmx9t/230JYfBuqSZg9qLBsryTmT/8b40ecdd7d1b36ba8a24053cac40b011/Web_Fender_04_08_25_Fender_Stories_Collection_Mike_Campbell__Red_Dog__Telecaster_NPI_Launch_Shop_Hero_Desktop.webp"
