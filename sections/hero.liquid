  <div class="hero-content">
    <img
      width="250px"
      height="auto"
      src="{{ section.settings.hero_title_image |  image_url: "master"  }}"
      alt="title image"
    >
    <!-- <h1>Header Title <span>Goes Here</span></h1> -->
    <div class="hero-content__inner">
      <p> {{ section.settings.hero_text }}</p>
      <div class="hero-btns">
        <a class="hero-btn" href="#">Shop Now</a>
        <a class="hero-learn-btn" href="#">Learn More</a>
      </div>
    </div>
  </div>
</section>

{% schema %}
  {
    "name": "Hero",
    "settings": [
      {
        "type": "image_picker",
        "id": "hero_image",
        "label": "Hero Image"
      },
      {
        "type": "image_picker",
        "id": "hero_title_image",
        "label": "Title Image"
      },
      {
        "type": "text",
        "id": "hero_text",
        "label": "Hero Sub-header",
        "default": "Select Player II models souped up with performance-driven mods right out of the box."
      },
    ]
  }
{% endschema %}
