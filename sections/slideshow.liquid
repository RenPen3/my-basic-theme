<section class="slideshow">

  <div class="slideshow-content">
    {% for block in section.blocks %}

      <div class="slideshow-card">
        <div class="slideshow-img">
          <img src="https://placehold.co/1200x600" width="1200px" height="auto" alt="image1">
        </div>
        <div class="slideshow-body">
          <div class="slideshow-title" style="color: {{ block.settings.card_title_color }}">{{ block.settings.card_title }}</div>
          <div class="slideshow-text" style="color:{{ block.settings.card_sub_text_color }};">{{ block.settings.card_sub_text }}</div>
        </div>
        <a href="#" class="slideshow-btn">Shop Now</a>
      </div>


    {% endfor %}

  </div> 
</section>

{% schema %}

{
  "name": "Cards",
  "tag": "section",
  "settings": [],
  "blocks": [
    {
      "type": "collection",
      "name": "Card",
      "settings": [
      {
        "type": "text",
        "id": "card_title",
        "label": "Card Title",
        "default": "Card Title Goes Here"
      }, 
      {
        "type": "color",
        "id": "card_title_color",
        "label": "Title Color",
        "default": "#000000"
      },
      {
        "type": "text",
        "id": "card_sub_text",
        "label": "Sub-text",
        "default": "Lorem ipsum dolor sit amet consectetur adipisicing elit. Harum tempora dolorum."
      },
      {
        "type": "color",
        "id": "card_sub_text_color",
        "label": "Sub-text Color",
        "default": "#000000"
      }
    ],
    "limit": 6
    }
  ],
   "presets": [
    {
      "name": "Cards Section",
      "category": "Custom",
      "blocks": [
        {
          "type": "collection"
        },
        {
          "type": "collection"
        }
      ]
    }
  ]
}

{% endschema %}