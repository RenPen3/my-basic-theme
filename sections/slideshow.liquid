<section class="slideshow">
  <div class="slideshow-content">

    <div class="slideshow-card">
      <div class="slideshow-img">
        <img src="https://placehold.co/1200x600" width="1200px" height="auto" alt="image1">
      </div>
      <div class="slideshow-body">
        <div class="slideshow-title" style="color: {{ section.settings.slideshow__title__color }}">{{ section.settings.slideshow__title }}</div>
        <div class="slideshow-text" style="color:{{ section.settings.slideshow__sub__text__color }};">{{ section.settings.slideshow__sub__text }}</div>
      </div>
      <a href="#" class="slideshow-btn">Shop Now</a>
    </div>

  </div> 
</section>

{% schema %}

{
  "name": "Cards",
  "tag": "section",
  "settings": [
    {
    "type": "text",
    "id": "slideshow__title",
    "label": "Card Title",
    "default": "Card Title Goes Here"
    }    
  ],
  "blocks": [
    {
      "name": "Cards",
      "type": "collection",
      "settings": [
        {
      "type": "color",
      "id": "slideshow__title__color",
      "label": "Card Title Color",
      "default": "#000000"
      },
      {
        "type": "text",
        "id": "slideshow__sub__text",
        "label": "Card Sub Text",
        "default": "Lorem ipsum dolor sit amet consectetur adipisicing elit. Harum tempora dolorum."
      },
      {
        "type": "color",
        "id": "slideshow__sub__text__color",
        "label": "Card Sub Text Color",
        "default": "#000000"
      }
    ]
    }
  ]
}

{% endschema %}